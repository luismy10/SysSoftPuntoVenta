<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" fx:id="window" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FxCodigoBarrasController">
   <children>
      <VBox AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <VBox alignment="TOP_CENTER" style="-fx-padding: 0.8333333333333334em; -fx-spacing: 0.8333333333333334em;">
                     <children>
                        <Label styleClass="labelRobotoBold16" text="Auto Generar Código" />
                        <HBox style="-fx-border-color: #666666;">
                           <children>
                              <ImageView fx:id="ivCodigo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" style="-fx-spacing: 0.8333333333333334em; -fx-padding: 0.8333333333333334em;">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onActionGenerar" styleClass="buttonLightDefault" text="Generar" />
                        <Label styleClass="labelOpenSansRegular14" text="Tipo de Codificación" />
                        <ComboBox fx:id="cbCodificacion" prefWidth="150.0" />
                        <Button mnemonicParsing="false" onAction="#onActionImprimir" styleClass="buttonLight" text="Imprimir" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
