<AnchorPane id="AnchorPane" fx:id="window" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FxClienteListaController">
   <children>
